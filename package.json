{
  "name": "edgepress",
  "version": "0.0.1",
  "description": "A CMS WordPress compliant version that runs on the Edge",
  "keywords": [
    "cms",
    "wordpress",
    "cloudflare",
    "vercel",
    "edge"
  ],
  "homepage": "https://github.com/amb1io/edgepress#readme",
  "bugs": {
    "url": "https://github.com/amb1io/edgepress/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amb1io/edgepress.git"
  },
  "license": "ISC",
  "author": "Amb1.io",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "dev": "wrangler types -c wrangler.jsonc && astro dev",
    "dev:vite": "vite",
    "wrangler-type": "wrangler types -c wrangler.jsonc",
    "build": "wrangler types -c wrangler.jsonc && astro build",
    "build:vite": "tsc && vite build",
    "preview": "astro preview",
    "preview:vite": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "task:env": "cp .env.example .env",
    "task:init": "npm run task:env && npm run db:migrate:local",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:local": "wrangler d1 migrations apply edgepress --local -c wrangler.jsonc",
    "db:migrate:remote": "wrangler d1 migrations apply edgepress --remote -c wrangler.jsonc",
    "db:baseline:remote": "wrangler d1 execute edgepress --remote --file=./drizzle/baseline.sql -c wrangler.jsonc",
    "db:studio": "drizzle-kit studio"
  },
  "devDependencies": {
    "@astrojs/react": "^4.4.2",
    "@iconify-json/line-md": "^1.2.14",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@astrojs/alpinejs": "^0.4.9",
    "@astrojs/cloudflare": "^12.6.12",
    "@blocknote/core": "^0.46.2",
    "@blocknote/mantine": "^0.46.2",
    "@blocknote/react": "^0.46.2",
    "@blocknote/xl-multi-column": "^0.46.2",
    "@libsql/client": "^0.15.15",
    "@tailwindcss/vite": "^4.1.18",
    "@types/alpinejs": "^3.13.11",
    "@uppy/core": "^5.2.0",
    "@uppy/dashboard": "^5.1.1",
    "@uppy/drag-drop": "^5.1.0",
    "@uppy/image-editor": "^4.2.0",
    "@uppy/locales": "^5.1.1",
    "@uppy/xhr-upload": "^5.1.1",
    "alpinejs": "^3.15.8",
    "astro": "^5.0.0",
    "astro-icon": "^1.1.5",
    "better-auth": "^1.4.9",
    "daisyui": "^5.5.17",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "dropzone": "^6.0.0-beta.2",
    "htmx.org": "^2.0.8",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwindcss": "^4.1.18",
    "wrangler": "^4.56.0"
  }
}
